extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Equipment:
      input#name.form-control(type='text', placeholder='Equipment name' name='name' value=(undefined===equipment ? '' : equipment.name))
      label(for="comments") Comments:
      input#name.form-control(type='text', placeholder='Add comments' name='comments' value=(undefined===equipment ? '' : equipment.comments))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg